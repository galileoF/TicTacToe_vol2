<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.GridPane?>

<BorderPane prefHeight="200.0" prefWidth="200.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="sample.Controller">
  <center>
    <GridPane>
      <children>
        <Button fx:id="btn1" mnemonicParsing="false" onMouseClicked="#setPic" prefHeight="100.0" prefWidth="100.0" text="" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" GridPane.vgrow="ALWAYS" />
        <Button fx:id="btn2" mnemonicParsing="false" onAction="#setPic" prefHeight="100.0" prefWidth="100.0" text="" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" GridPane.vgrow="ALWAYS" />
        <Button id="btn2" fx:id="btn3" mnemonicParsing="false" onAction="#setPic" prefHeight="100.0" prefWidth="100.0" text="" GridPane.columnIndex="2" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" GridPane.vgrow="ALWAYS" />
        <Button fx:id="btn4" mnemonicParsing="false" onAction="#setPic" prefHeight="100.0" prefWidth="100.0" text="" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS" />
        <Button fx:id="btn5" mnemonicParsing="false" onAction="#setPic" prefHeight="100.0" prefWidth="100.0" text="" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS" />
        <Button id="btn5" fx:id="btn6" mnemonicParsing="false" onAction="#setPic" prefHeight="100.0" prefWidth="100.0" text="" GridPane.columnIndex="2" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS" />
        <Button fx:id="btn7" mnemonicParsing="false" onAction="#setPic" prefHeight="100.0" prefWidth="100.0" text="" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.vgrow="ALWAYS" />
        <Button fx:id="btn8" mnemonicParsing="false" onAction="#setPic" prefHeight="100.0" prefWidth="100.0" text="" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.vgrow="ALWAYS" />
        <Button fx:id="btn9" mnemonicParsing="false" onAction="#setPic" prefHeight="100.0" prefWidth="100.0" text="" GridPane.columnIndex="2" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.vgrow="ALWAYS" />
      </children>
      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      </columnConstraints>
      <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      </rowConstraints>
    </GridPane>
  </center>
  <top>
    <MenuBar>
      <menus>
        <Menu mnemonicParsing="false" text="Game">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#startGame" text="New" fx:id="newGame" />
            <MenuItem mnemonicParsing="false" onAction="#closeGame" text="Exit" fx:id="exitGame" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
  </top>
</BorderPane>
